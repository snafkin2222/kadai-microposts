<!--Likeボタンの設置-->
  <% if current_user.like?(micropost) %>
  <!--Likeされている場合Unlikeボタンを表示-->
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
	<!--↑ ':micropost_id =リクエストパラメーターキー'に対しなんの'id値 = micropost.id'を設定したいのか-->
	<%= f.submit 'Unfavorite',class: 'btn btn-danger btn-sm' %> 
	<% end %>
	<!--Likeボタンを表示-->
	<% else %>
     <%= form_for(current_user.favorites.build) do |f| %>    
     <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
 <% end %>